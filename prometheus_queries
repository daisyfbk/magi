cpu=100 - (avg by(instance) (rate(node_cpu_seconds_total{mode="idle",instance=~"192.168.221.(.*)"}[10s])) * 100)
network_r=max by(instance) (rate(node_network_receive_bytes_total{instance=~"192.168.221.(.*)",device="eth1"}[10s]))
network_w=max by(instance) (rate(node_network_transmit_bytes_total{instance=~"192.168.221.(.*)",device="eth1"}[10s]))
disk_r=max by(instance) (rate(node_disk_read_bytes_total{instance=~"192.168.221.(.*)"}[30s]))
disk_w=max by(instance) (rate(node_disk_written_bytes_total{instance=~"192.168.221.(.*)"}[30s]))
memory=100 * (1 - node_memory_MemAvailable_bytes{instance=~"192.168.221.(.*)"}/node_memory_MemTotal_bytes{instance=~"192.168.221.(.*)"})
